{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Quidkey Docs",
  "colors": {
    "primary": "#3A81FF",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "icon": "book-open-cover",
          "href": "https://docs.quidkey.com"
        },
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "href": "https://quidkey.com/blog"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Integration",
            "pages": [
              "guides/embedded-with-stripe"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Authentication",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "api-reference/endpoint/issue-token",
              "POST /api/v1/oauth2/refresh"
            ]
          },
          {
            "group": "Embedded Payment Flow",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "POST /api/v1/embedded/payment-requests",
              "PATCH /api/v1/embedded/payment-requests",
              "POST /api/v1/embedded/payment-initiation"
            ]
          },
          {
            "group": "Webhooks",
            "openapi": "api-reference/openapi.json",
            "pages": [
              "POST /api/v1/webhooks",
              "POST /api/v1/webhooks/secret",
              "POST /api/v1/webhooks/secret/revoke"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:rabea@quidkey.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/quidkeyHQ",
      "github": "https://github.com/quidkey",
      "linkedin": "https://linkedin.com/company/quidkey"
    }
  }
}
